{
  "name": "@sqlite.org/sqlite-wasm",
  "version": "0.0.3",
  "description": "SQLite Wasm conveniently wrapped as an ES Module.",
  "main": "index.mjs",
  "type": "module",
  "files": [
    "index.mjs",
    "sqlite-wasm/"
  ],
  "exports": {
    ".": {
      "import": "./index.mjs",
      "main": "./index.mjs",
      "browser": "./index.mjs"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "sqlite-wasm": "bin/index.js"
  },
  "scripts": {
    "prepare": "npm run build && npm run fix && npm run publint",
    "publint": "npx publint",
    "clean": "shx rm -rf sqlite-wasm",
    "build": "npm run clean && node bin/index.js",
    "start": "npx http-server --coop",
    "fix": "npx prettier . --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomayac/sqlite-wasm.git"
  },
  "author": "Thomas Steiner (tomac@google.com)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/tomayac/sqlite-wasm/issues"
  },
  "homepage": "https://github.com/tomayac/sqlite-wasm#readme",
  "devDependencies": {
    "cheerio": "^1.0.0-rc.12",
    "decompress": "^4.2.1",
    "http-server": "github:vapier/http-server",
    "module-workers-polyfill": "^0.3.2",
    "node-fetch": "^3.3.1",
    "prettier": "^2.8.7",
    "publint": "^0.1.11",
    "shx": "^0.3.4"
  }
}
